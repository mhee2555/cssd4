<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="500dp"
    android:background="@drawable/bg"
    android:layout_height="350dp">

    <!-- HEADER -->
    <include android:id="@+id/top_header"
        android:layout_height="50dp"
        android:layout_width="fill_parent"
        android:layout_alignParentStart="true"
        layout="@layout/layout_header" />

    <!-- FOOTER -->
    <LinearLayout android:id="@+id/bottom_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">
        <!-- menu bar -->
        <include layout="@layout/layout_footer" />
    </LinearLayout>

    <!-- MAIN PART -->
    <LinearLayout android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/top_header"
        android:layout_above="@id/bottom_menu"
        android:layout_weight="1"
        android:id="@+id/sub_content_view"
        android:paddingBottom="5dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_vertical"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/txt_item_code"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:text="Code : "
                android:textSize="14dp" />

            <TextView
                android:id="@+id/txt_all_item_stock"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:text="Stock : "
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:gravity="center"

                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <EditText
                    android:id="@+id/edt_qty"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/text_edit"
                    android:gravity="center"
                    android:inputType="number|numberDecimal"
                    android:singleLine="true"
                    android:textColor="@color/form_etext"
                    android:textSize="14dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|center_vertical"
                android:gravity="center"

                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <Button
                    android:id="@+id/btn_create"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/button_master"
                    android:scaleType="fitCenter"
                    android:text="เพิ่ม"
                    android:textColor="@color/colorWhite"
                    android:textSize="14dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
