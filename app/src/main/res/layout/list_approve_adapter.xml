<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="4dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:paddingTop="4dp">

    <LinearLayout
        android:id="@+id/ln_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/txt_edit_graywhite">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/index"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:text="1"
                android:textColor="@color/colorBlack"
                android:textSize="18dp"></TextView>

            <TextView
                android:id="@+id/itemname_approve"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="30dp"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:text="Adson Non Tooth"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"></TextView>

            <TextView
                android:id="@+id/usagecount"
                android:layout_width="125dp"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/itemname_approve"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:text="I00012050001"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"></TextView>

            <TextView
                android:id="@+id/DepID"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/usagecount"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingStart="10dp"
                android:text="[ แผนก : BJ ]"
                android:textColor="@color/colorBlack"
                android:textSize="16dp"></TextView>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
