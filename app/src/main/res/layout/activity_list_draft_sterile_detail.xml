<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="2dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/rectangle"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_usage_code"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imv_remove"
            android:maxLines="1"
            android:text="I0000-0000"
            android:textColor="@color/colorGray"
            android:gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:textSize="10dp"></TextView>

        <TextView
            android:id="@+id/txt_item_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/imv_remove"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="ItemName"
            android:textColor="@color/list_text_color"
            android:textSize="12dp"></TextView>


        <TextView
            android:id="@+id/txt_qty"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_marginStart="4dp"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/imv_print"
            android:background="@drawable/text_edit"
            android:gravity="center|center_vertical"
            android:maxLines="1"
            android:text="0"
            android:layout_margin="2dp"
            android:textColor="@color/list_text_color"
            android:textSize="14dp"
            android:textStyle="bold"></TextView>


        <TextView
            android:id="@+id/txt_age"
            android:layout_width="34dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@+id/txt_qty"
            android:background="@drawable/text_edit"
            android:gravity="center|center_vertical"
            android:maxLines="2"
            android:text="0"
            android:layout_margin="2dp"
            android:textColor="@color/list_text_color"
            android:textSize="11dp"></TextView>

        <CheckBox
            android:id="@+id/chk"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imv_remove"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginEnd="1dp"
            android:layout_marginRight="4dp"
            android:buttonTint="@color/colorBlue"
            android:gravity="center"
            android:scaleType="fitCenter"
            android:scaleX="1.7"
            android:scaleY="1.7"
            android:visibility="gone"/>



        <ImageView
            android:id="@+id/imv_print"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="4dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_radio_normal_grey" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_id"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginRight="1dp"
        android:layout_weight="0"
        android:gravity="center|center_vertical"
        android:maxLines="1"
        android:text="id"
        android:textColor="@color/list_text_color"
        android:textSize="14dp"
        android:visibility="gone"></TextView>


</LinearLayout>




